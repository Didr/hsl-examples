function bitand($a, $b)
{
	$result = 0;
	$x = 0;
	while ($x <= 31)
	{
		if ($a % 2 and $b % 2)
			$result += 2 ** $x;
		$a = floor($a / 2);
		$b = floor($b / 2);
		$x += 1;
	}
	return $result;
}

